<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.TopTen"
    android:background="@drawable/barn"
    >

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/Default_Margin"
    android:paddingHorizontal="@dimen/default_padding"
    >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/topten_BTN_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/main_menu"
            android:lines="1"
            android:textSize="@dimen/Default_StringSize"
            android:textStyle="bold"
            />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/topten_BTN_startGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/start_game"
            android:lines="1"
            android:textSize="@dimen/Default_StringSize"
            android:textStyle="bold"
            />

</RelativeLayout>
    <FrameLayout
        android:id="@+id/topten_FRAME_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/default_padding"
    />

    <FrameLayout
        android:id="@+id/topten_FRAME_map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/default_padding"
        />

</androidx.appcompat.widget.LinearLayoutCompat>